<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">
	<display-name></display-name>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<error-page>
		<error-code>404</error-code>
		<location>/404.jsp</location>
	</error-page>
	<filter>
		<filter-name>CharactorEncodingFilter</filter-name>
		<filter-class>com.siteforse.filter.CharactorEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>CharactorEncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<filter>
		<filter-name>PermissionFilter</filter-name>
		<filter-class>com.siteforse.filter.PermissionFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>PermissionFilter</filter-name>
		<url-pattern>/admin/*</url-pattern>
	</filter-mapping>

	<servlet>
		<servlet-name>AdminLoginServlet</servlet-name>
		<servlet-class>com.siteforse.servlet.AdminLoginServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>DocUploadServlet</servlet-name>
		<servlet-class>com.siteforse.servlet.DocUploadServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>DelDocServlet</servlet-name>
		<servlet-class>com.siteforse.servlet.DelDocServlet</servlet-class>
	</servlet>
	<servlet>
		<description>change the password of admin</description>
		<servlet-name>ChangePswServlet</servlet-name>
		<servlet-class>com.siteforse.servlet.ChangePswServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AdminLogoutServlet</servlet-name>
		<servlet-class>com.siteforse.servlet.AdminLogoutServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>DelPostServlet</servlet-name>
		<servlet-class>com.siteforse.servlet.DelPostServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AdminPostServlet</servlet-name>
		<servlet-class>com.siteforse.servlet.AdminPostServlet</servlet-class>
	</servlet>
  <servlet>
    <servlet-name>AdminReplyServlet</servlet-name>
    <servlet-class>com.siteforse.servlet.AdminReplyServlet</servlet-class>
  </servlet>

	<servlet-mapping>
		<servlet-name>AdminLoginServlet</servlet-name>
		<url-pattern>/admin/AdminLoginServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DocUploadServlet</servlet-name>
		<url-pattern>/admin/DocUploadServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DelDocServlet</servlet-name>
		<url-pattern>/admin/DelDocServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ChangePswServlet</servlet-name>
		<url-pattern>/admin/ChangePswServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AdminLogoutServlet</servlet-name>
		<url-pattern>/admin/AdminLogoutServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DelPostServlet</servlet-name>
		<url-pattern>/admin/DelPostServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AdminPostServlet</servlet-name>
		<url-pattern>/admin/PostServlet</url-pattern>
	</servlet-mapping>
  <servlet-mapping>
    <servlet-name>AdminReplyServlet</servlet-name>
    <url-pattern>/admin/ReplyServlet</url-pattern>
  </servlet-mapping>
</web-app>